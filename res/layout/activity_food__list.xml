<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="david.amunga.com.foodapp.Food_List_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <com.lucasurbas.listitemview.ListItemView
            android:id="@+id/list_item_1"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            app:liv_title="Fruitcake"
            app:liv_subtitle="KES 299"
            app:liv_menu="@menu/food_menu"
            tools:layout_editor_absoluteY="12dp"
            tools:layout_editor_absoluteX="8dp"></com.lucasurbas.listitemview.ListItemView>

        <com.lucasurbas.listitemview.ListItemView
            android:id="@+id/list_item_2"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            app:liv_title="Butter Cookies"
            app:liv_subtitle="KES 120"
            app:liv_menu="@menu/food_menu"
            tools:layout_editor_absoluteY="12dp"
            tools:layout_editor_absoluteX="8dp"></com.lucasurbas.listitemview.ListItemView>

        <com.lucasurbas.listitemview.ListItemView
            android:id="@+id/list_item_3"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            app:liv_title="Chips and Chicken"
            app:liv_subtitle="KES 350"
            app:liv_menu="@menu/food_menu"
            tools:layout_editor_absoluteY="12dp"
            tools:layout_editor_absoluteX="8dp"></com.lucasurbas.listitemview.ListItemView>



    </LinearLayout>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:itemBackground="@color/colorPrimary"
        android:gravity="bottom"


        app:itemIconTint="@drawable/nav_item_color_state"
        app:itemTextColor="@drawable/nav_item_color_state"
        app:menu="@menu/bottom_navigation_menu_list"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>




</RelativeLayout>
